<?xml version="1.0"?>
<root>
    <appdef>
        <appname>MACVIM</appname>
        <equal>org.vim.MacVim</equal>
    </appdef>
    <appdef>
        <appname>ITERM2</appname>
        <equal>com.googlecode.iterm2</equal>
    </appdef>
    <item>
        <name>Swap backquote (`) and danish dollar (ยง) - in MacVim and iTerm2 only</name>
        <identifier>private.swap_back_tick_and_danish_dollar</identifier>
        <autogen>__KeyToKey__ KeyCode::DANISH_DOLLAR, KeyCode::BACKQUOTE</autogen>
        <autogen>__KeyToKey__ KeyCode::BACKQUOTE, KeyCode::DANISH_DOLLAR</autogen>
        <only>MACVIM, ITERM2</only>
    </item>
    <item>
        <name>Swap WinKey and Alt when using windows keyboard</name>
        <identifier>private.swap_winkey_and_altkey</identifier>
        <autogen>__KeyToKey__ KeyCode::COMMAND_L, KeyCode::OPTION_L</autogen>
        <autogen>__KeyToKey__ KeyCode::OPTION_L, KeyCode::COMMAND_L</autogen>
    </item>
</root>
